<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zyb.qunyingzhuan6.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.zyb.qunyingzhuan6.LayerView
            android:layout_width="wrap_content"
            android:layout_height="155dp" />

            <com.example.zyb.qunyingzhuan6.RoundRectView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.example.zyb.qunyingzhuan6.GuaGua
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.example.zyb.qunyingzhuan6.ShaderView1
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <com.example.zyb.qunyingzhuan6.ShaderView2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.example.zyb.qunyingzhuan6.ShaderView3
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.example.zyb.qunyingzhuan6.PathEffectView
                android:layout_width="match_parent"
                android:layout_height="450dp" />

            <com.example.zyb.qunyingzhuan6.SurfaceView1
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <com.example.zyb.qunyingzhuan6.SurfaceView2
                android:layout_width="match_parent"
                android:layout_height="400dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
